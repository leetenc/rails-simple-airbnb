<div class='mx-4 py-4'>
  <h1>Flat List</h1>

  <p><%= link_to 'Add a new flat', new_flat_path, class: "btn btn-primary" %></p>

  <% @flats.each do |flat| %>

    <p><%= link_to flat.name, flat_path(flat) %></p>
    <p><%= flat.description %></p>
      <%= link_to flat_path(flat),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </p>
    <hr>
  <% end %>
</div>
